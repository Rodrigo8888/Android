<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rpcosta.obligatorio1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/cerebrotes"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".VentanaRegistroNombre"
            android:label="@string/title_activity_ventana_registro" >
        </activity>
        <activity
            android:name=".VentanaRegistroMail"
            android:label="@string/title_activity_ventana_registro_mail" >
        </activity>
        <activity
            android:name=".VentanaRegistroPassword"
            android:label="@string/title_activity_ventana_registro_password" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".VentanaInicio"
            android:label="@string/nombreApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VentanaHome"
            android:label="@string/title_activity_ventana_home" >
        </activity>
        <activity
            android:name=".VentanaDesafios"
            android:label="@string/title_activity_ventana_desafios" >
        </activity>
        <activity
            android:name=".MiPerfil"
            android:label="@string/title_activity_mi_perfil" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
