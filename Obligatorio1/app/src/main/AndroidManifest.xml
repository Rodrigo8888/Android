<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rpcosta.obligatorio1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/cerebrotes"
        android:theme="@style/AppTheme"
            android:label="@android:string/nombreApp">
        <activity
            android:name=".MyActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".VentanaRegistroNombre" >
        </activity>
        <activity
            android:name=".VentanaRegistroMail" >
        </activity>
        <activity
            android:name=".VentanaRegistroPassword" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".VentanaInicio"
            android:label="@string/nombreApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VentanaDesafios" >
        </activity>
        <activity
            android:name=".MiPerfil" >
        </activity>
        <activity
            android:name=".OlvidoPass" >
        </activity>
        <activity
            android:name=".EditarDatos" >
        </activity>
        <activity
            android:name=".ChangeNameMail" >
        </activity>
        <activity
            android:name=".DesafioIndividual" >
        </activity>
        <activity
            android:name=".Arte" >
        </activity>
        <activity
            android:name=".Preguntas" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
