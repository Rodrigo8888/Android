<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gestordereservas.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:weightSum="2"
        android:background="@color/fondoBton"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="73dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/logog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/GestorReserva"
                android:textColor="@color/boton"
                android:textSize="35sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/fondoBton"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ingresar"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@color/boton"
            android:text="@string/btnIngresar"
            android:textColor="@color/blanco"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/registrarse" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/fondoIngreso"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/blanco"
            android:cursorVisible="true"
            android:ems="10"
            android:textSize="15sp"
            android:gravity="center"
            android:hint="@string/Usuario"
            android:inputType="textPersonName"
            android:textColorHint="#BDBDBD"
            android:textStyle="italic" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="49dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:background="@color/blanco"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:textColorHint="#BDBDBD"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/rpcosta/AndroidStudioProjects/GestorDeReservas/app/src/main/res/layout/activity_main.xml -->